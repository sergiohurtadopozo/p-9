--- 
const courseTitle = "Fútbol en Acción";
const modules = [
  { title: "Fundamentos Técnicos del Fútbol", slug: "post-0" },
  { title: "Estrategias y Posicionamiento en el Campo", slug: "post-1" },
  { title: "Mejora Física y Mental", slug: "post-2" },
  { title: "Estrategias Avanzadas", slug: "post-3" },
  { title: "Proyecto Final: Diseña tu Plan Táctico", slug: "post-4" }
];
---

<header class="mt-5">
  <div class="container mx-auto px-6 text-center">
    <!-- Título del curso -->
    <h1 class="text-5xl font-bold leading-tight mb-4 text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-green-600">
      {courseTitle}
    </h1>
    
    <!-- Navegación de módulos -->
    <nav>
      <ul class="flex flex-col sm:flex-row justify-center items-center gap-8">
        {modules.map((module, index) => (
          <li>
            <a 
              href={`/blog/${module.slug}`} 
              class="text-lg md:text-xl font-semibold text-neutral-400 hover:text-green-500 hover:underline cursor-pointer transition-all duration-300 transform hover:scale-105"
            >
              {index + 1}: {module.title}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
